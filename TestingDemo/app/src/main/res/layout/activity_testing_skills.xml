<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marc.testingdemo.TestingSkills">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Testing What I Know!"
        android:id="@+id/titleHead"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:background="#ffdd00"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:typeface="serif" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleHead"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/television"
            android:paddingLeft="-15dp"
            android:layout_gravity="fill_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/camera"
            android:scaleType="matrix"
            android:textAlignment="center"
            android:layout_gravity="fill_horizontal"
            android:onClick="moveOne" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:onClick="soundOne" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:onClick="soundTwo" />

    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mic"
        android:src="@drawable/mic"
        android:layout_row="11"
        android:layout_column="1"
        android:layout_below="@+id/titleHead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="308dp"
        android:onClick="soundSpin" />

</RelativeLayout>
